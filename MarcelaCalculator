    private void jButton12ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        result = true;
        float resul;
        String resu;
        if (soma == true){
            resul = n1 + n2;
            resu = String.valueOf(resul);
            jTextArea1.append(" = " + resu + "\n \nObrigada por usar MarcelaCalculator 2000!");
            soma = false;
            result = false;
            acao2 = false;
        }
        if (sub == true){
            resul = n1 - n2;
            resu = String.valueOf(resul);
            jTextArea1.append(" = " + resu + "\n \nObrigada por usar MarcelaCalculator 2000!");
            sub = false;
            result = false;
            acao2 = false;
        }
        if (multi == true){
            resul = n1 * n2;
            resu = String.valueOf(resul);
            jTextArea1.append(" = " + resu + "\n \nObrigada por usar MarcelaCalculator 2000!");
            multi = false;
            result = false;
            acao2 = false;
        }
        if (divisao == true){
            resul = n1/n2;
            resu = String.valueOf(resul);
            jTextArea1.append(" = " + resu + "\n \nObrigada por usar MarcelaCalculator 2000!");
            divisao = false;
            result = false;
            acao2 = false;
        }
        if (raiz == true){
            if (n1 < 0){
                jTextArea1.setText("O resultado é muito complexo pra mim.");
                divisao = false;
            }
            resul = (float) Math.sqrt(n1);
            resu = String.valueOf(resul);
            jTextArea1.append(" = " + resu + "\n \nObrigada por usar MarcelaCalculator 2000!");
            divisao = false;
            result = false;
        }
    }                                         

    private void jButton11ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        n1 = 0;
        n2 = 0;
        soma = false;
        sub = false;
        multi = false;
        divisao = false;
        raiz = false;
        decimal  = false;
        acao2 = false;
        div = 10;
        div2 = 10;
        jTextArea1.setText("");
    }                                         

