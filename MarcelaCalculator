    private void jButton18ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        boolean acao = true;
        if(acao == true && acao2 == false){
        if (n1 > 0){
            n1 = n1 *(-1);
        jTextArea1.setText("-" + Float.toString(n1));
        }
        else{
            n1 = n1 *(-1);
            jTextArea1.setText(Float.toString(n1));
        }
        }
        if (acao2 == true){
            if(n2 > 0){
            n2 = n2 * (-1);
            if (soma == true){
            jTextArea1.setText(Float.toString(n1)+ " + (-"+ Float.toString(n2)+")");
            }
            if (sub == true){
                jTextArea1.setText(Float.toString(n1)+ " - (-"+ Float.toString(n2)+")");
            }
            if (multi == true){
                jTextArea1.setText(Float.toString(n1)+ " * (-"+ Float.toString(n2) + ")");
            }
            if (divisao == true){
                jTextArea1.setText(Float.toString(n1)+ " / (-"+ Float.toString(n2)+")");
            }
          }
            else{
                n2 = n2 *(-1);
                if (soma == true){
            jTextArea1.setText(Float.toString(n1)+ " + "+ Float.toString(n2)+")");
            }
            if (sub == true){
                jTextArea1.setText(Float.toString(n1)+ " - "+ Float.toString(n2)+")");
            }
            if (multi == true){
                jTextArea1.setText(Float.toString(n1)+ " * "+ Float.toString(n2) + ")");
            }
            if (divisao == true){
                jTextArea1.setText(Float.toString(n1)+ " / "+ Float.toString(n2)+")");
            }
            }
        }
    }                                         

    private void jButton19ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        raiz = true;
        jTextArea1.setText("√¯" + Float.toString(n1));
    }                                         

    private void jButton20ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String nome;
        nome = JOptionPane.showInputDialog("Insira seu nome!");
        JOptionPane.showMessageDialog(null, "Oi, " + nome + ", eu sei que os cálculos estão difíceis pra você.");
        JOptionPane.showMessageDialog(null, "E que provavelmente você não tem namorada(o).");
        JOptionPane.showMessageDialog(null, "Mas olha, vai ficar tudo bem! Você ainda tem chances.");
        JOptionPane.showMessageDialog(null, "Você abriu a calculadora, né? Isso significa que está tentando.");
        JOptionPane.showMessageDialog(null, "Então não desista. REG ainda é passar. Força! Essa calculadora amadora te adora. =)");
        jTextArea1.setText("                 ❤❤❤❤❤❤ " + nome + " ❤❤❤❤❤❤");
    }                                         
    
