    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        boolean acao = true;
        if (acao == true && acao2 == false && decimal == false){
            n1 = 1 + n1*10;
            jTextArea1.append("1");
            acao = false;
        }
        if (acao2 == true && decimal == false){
            n2 = 1 + n2*10;
            jTextArea1.append("1");
        }
         if (acao == true && acao2 == false && decimal == true){
            n1 = n1 + 1/div;
            div = div*10;
            jTextArea1.append("1");
            acao = false;
        }
        if (acao2 == true && decimal == true){
            n2 = n2 + 1/div2;
            div2 = div2*10;
            jTextArea1.append("1");
        }
    }                                        

